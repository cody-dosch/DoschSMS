
@{
    ViewBag.Title = "Login";
}

@model StudentManagementSystem.Models.ViewModels.LoginModel

@using (Html.BeginForm("Login", "Login"))
{
    <div class="form-group row loginHeader">
        <h2>Welcome</h2>
    </div>
    
    <div class="form-group row">
        @Html.LabelFor(l => l.Username, "Username", new { @class = "col-md-5 loginFormLabel" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(l => l.Password, "Password", new { @class = "col-md-5 loginFormLabel" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
        </div>
    </div>

    <input type="hidden" name="Submitted" id="Submitted" value="true" />
    <br />

    
    if (Model.ErrorMessage != null)
    {
    <div class="form-group">
        <p style="color:red;">@Model.ErrorMessage</p>
    </div>
    }


    <div class="form-group">
        <button type="submit" name="loginSubmit" class="btn-primary btn">Login</button>
    </div>
}

