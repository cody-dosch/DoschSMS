
@{
    ViewBag.Title = "Add User";

    var roles = TempData[StudentManagementSystem.Resources.TempDataValues.Roles] as List<SelectListItem> ?? new List<SelectListItem>();
}

@model StudentManagementSystem.Models.ViewModels.AddUserModel

@using (Html.BeginForm("AddUser", "Users"))
{
    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-4">
                @Html.LabelFor(l => l.Username, "Username")<span class="required-star">*</span>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @maxlength = "32" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(l => l.Password, "Password")<span class="required-star">*</span>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(l => l.Role, "Role")<span class="required-star">*</span>
                @Html.DropDownListFor(m => m.Role, roles, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
            </div>

            <input type="hidden" name="Submitted" id="Submitted" value="true" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-4">
                @Html.LabelFor(l => l.FirstName, "First Name")
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @maxlength = "64" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(l => l.LastName, "Last Name")
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @maxlength = "64" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>

            <input type="hidden" name="Submitted" id="Submitted" value="true" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <div class="col-md-4">
                @Html.LabelFor(l => l.Address, "Address")
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @maxlength = "64" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(l => l.City, "City")
                @Html.TextBoxFor(m => m.City, new { @class = "form-control", @maxlength = "64" })
                @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(l => l.State, "State")
                @Html.TextBoxFor(m => m.State, new { @class = "form-control", @maxlength = "32" })
                @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(l => l.ZipCode, "Zip")
                @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", @maxlength = "32" })
                @Html.ValidationMessageFor(m => m.ZipCode, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    if (Model.ErrorMessage != null)
    {
        <div class="form-group row">
            <div class="col-md-12 submit-error">
                <div class="col-md-4">
                    <p>@Model.ErrorMessage</p>
                </div>
            </div>
        </div>
    }

    <div class="form-group row">
        <div class="col-md-12" style="margin-top: 20px;">
            <div class="col-md-4">
                <button type="submit" name="addUserSubmit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
}