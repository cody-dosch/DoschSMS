
@{
    ViewBag.Title = "Account Details";
}

@model StudentManagementSystem.Models.UserModel

    <h2 class="form-header">Account Details</h2>

    <div class="form-wrapper">
        <div class="form-group row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <h4><b>Username: </b>@string.Format("{0}", Model.Username ?? "")</h4>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <h4><b>Name: </b>@string.Format("{0} {1}", Model.FirstName ?? "", Model.LastName ?? "")</h4>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <h4><b>Address: </b>@string.Format("{0}, {1}, {2} {3}", Model.Address ?? "", Model.City ?? "", Model.State ?? "", Model.ZipCode ?? "")</h4>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12" style="margin-top: 20px;">
                <div class="col-md-4">
                    <button type="submit" name="editUserSubmit" class="btn btn-primary" onclick="location.href='@Url.Action("EditUser", "Users")'">Edit</button>
                </div>
            </div>
        </div>
    </div>
